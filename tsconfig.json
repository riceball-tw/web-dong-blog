// Astro TypeScript Doc: https://docs.astro.build/en/guides/typescript/
{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "react"
  }
}
