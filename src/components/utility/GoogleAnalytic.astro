---
const GOOGLE_ANALYTIC_ID = import.meta.env.PUBLIC_GOOGLEANALYTIC_ID
---

<!-- Google Analytic -->
<script
type="text/partytown"
src={`https://www.googletagmanager.com/gtag/js?id=${GOOGLE_ANALYTIC_ID}`}
></script>
<script type="text/partytown" define:vars={{GOOGLE_ANALYTIC_ID}}>
window.dataLayer = window.dataLayer || [];
function gtag() {
  // eslint-disable-next-line no-undef, prefer-rest-params
  dataLayer.push(arguments);
}
gtag('js', new Date());
gtag('config', GOOGLE_ANALYTIC_ID);
</script>