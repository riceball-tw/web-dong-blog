---
export interface Props {
  text?: string;
}
const { text } = Astro.props;
---

<div
  class=`flex w-fit items-center gap-2 rounded-full border border-secondaryOld/60 bg-secondaryOld/10 px-4 py-2 text-xs tracking-wide opacity-80 transition-opacity hover:opacity-100 dark:border-secondaryOld-light/60 dark:bg-secondaryOld-light/10 ${Astro.slots.icon ? 'pr-2' : ''}`
>
  <slot />
  {text && <span>{text}</span>}
  <slot name="icon" />
</div>
